---
import { Icon } from "astro-icon/components";
---

<div id="back-to-top-btn" class="back-to-top-btn hide" onclick="backToTop()">
    <button aria-label="Back to Top" class="btn-card h-[2.75rem] w-[2.75rem]">
        <Icon name="material-symbols:keyboard-arrow-up-rounded" class="mx-auto text-white text-xl"></Icon>
    </button>
</div>

<style>
.back-to-top-btn {
    position: fixed;
    bottom: 1.5rem;
    right: 1.5rem;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #0ea5e9, #0369a1); /* Nền xanh nổi bật */
    border-radius: 9999px; /* Tròn hoàn toàn */
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
    transition: opacity 0.3s, transform 0.3s, background 0.3s;
    opacity: 1;
    cursor: pointer;
}
.back-to-top-btn:hover {
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.3);
}
.back-to-top-btn.hide {
    opacity: 0;
    pointer-events: none;
    transform: translateY(20px);
}
</style>

<script is:inline>
function backToTop() {
    window.scroll({ top: 0, behavior: 'smooth' });
}
window.addEventListener('scroll', function () {
    const btn = document.getElementById('back-to-top-btn');
    if (!btn) return;
    if (window.scrollY > 200) {
        btn.classList.remove('hide');
    } else {
        btn.classList.add('hide');
    }
});
</script>
